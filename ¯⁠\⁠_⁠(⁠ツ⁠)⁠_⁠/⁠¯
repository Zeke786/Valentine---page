    <script>
        let noButton = document.getElementById("no");
        let gifContainer = document.getElementById("gif-container");

        let noTexts = ["Please? ðŸ˜¢", "Are you sure? ðŸ¥º", "I will get really sad... ðŸ˜­", "Really really sad... ðŸ’”", "Think again? ðŸ˜Ÿ", "Last chance! ðŸ˜£"];
        let noClickCount = 0;

        function sayYes() {
            document.querySelector(".buttons").style.display = "none";
            gifContainer.style.display = "block";
        }

        function growNo() {
            if (noClickCount < noTexts.length) {
                noButton.innerHTML = noTexts[noClickCount];
                noClickCount++;
            }
            let currentSize = parseInt(window.getComputedStyle(noButton).fontSize);
            noButton.style.fontSize = (currentSize + 5) + "px";
        }
    </script>

